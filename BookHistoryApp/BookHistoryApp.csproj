    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>f37d7018-d52c-471a-825e-f42ce4732432</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="src\Tests\**" />
    <Compile Remove="ui\**" />
